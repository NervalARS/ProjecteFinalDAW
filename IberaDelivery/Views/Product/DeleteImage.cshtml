@model IberaDelivery.Models.Image

@{
    ViewData["Title"] = "Delete Image";
}

<h1>Delete Image</h1>

<h3>Confirma que vols eliminar:</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dd>
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.Image1)" class="img-thumbnail" />
        </dd>
    </dl>
    
    <form asp-action="DeleteImage">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="url" value="Product/Edit/@Model.ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="../Edit/@Model.ProductId">Back</a>
    </form>
</div>