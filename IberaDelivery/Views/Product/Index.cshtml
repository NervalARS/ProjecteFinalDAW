@model IEnumerable<IberaDelivery.Models.Product>
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Productes";

}

<h2>Productes</h2>
<a asp-action="Create"><button>Create</button></a>
<br><br>
<form asp-action="Index">

    <input type="text" class="form-control" name="Cadena">  @ViewBag.cadena
    @if (@ViewBag.cadena != null)
{
    <a asp-action="Index">Treure filtre</a>
}

<select  name="cat" id="cat" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Select Category --</option>
                </select>
<select name="criteri" id="criteri">
    
    @if (@ViewBag.missatge == 1)
    {
        <option value="1" selected >Preu ASC</option>
    }else{
        <option value="1">Preu ASC</option>
    }

    @if (@ViewBag.missatge == 2)
    {
        <option value="2" selected>Preu Desc</option>
    }else{
       <option value="2">Preu Desc</option>
    }

    @if (@ViewBag.missatge == 3)
    {
       <option value="3" selected>Id-ASC</option>
    }else{
        <option value="3">Id-ASC</option>
    }

    @if (@ViewBag.missatge == 4)
    {
         <option value="4" selected>Id-Desc</option>
    }else{
        <option value="4">Id-Desc</option>
    }
    
    
   
   
</select>

<input type="submit" value="Search" class="btn btn-primary">

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provider.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Iva)
                </td>
                <td>


                    @foreach (var item2 in item.Images)
                    {


                        <img src="data:image;base64,@System.Convert.ToBase64String(item2.Image1)" class="img-thumbnail" />

                    }


                </td>

                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>

            </tr>
        }
    </tbody>
</table>

