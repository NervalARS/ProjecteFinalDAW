@model IEnumerable<IberaDelivery.Models.Product>
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Products";
    
}

<h2>Productes</h2>

<a asp-action="Create"><button>New Product +</button></a>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iva)
            </th>
            <th>Delete</th>
            <th>Edit</th>
            <th>Details</th>
            <th>Add to carrito</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                @Html.DisplayFor(modelItem => item.Id)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Name)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Description)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Provider.FirstName)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Stock)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Price)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Iva)
            </th>
            
         @*   @if (@HttpContextAccessor.HttpContext.Session.GetString("userName") != null){  *@

            
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                   <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    <a asp-action="AddToCart" asp-route-id="@item.Id">+</a>
                </td>
       @*     }else{
                <td></td>
                <td></td>
            } *@
            </tr>
        }
    </tbody>
</table>
 @if (@HttpContextAccessor.HttpContext.Session.GetString("Cart") != null){ 
    <a asp-action="Checkout">Checkout</a>
    <a asp-action="ClearCart">Empty Cart</a>
 }
