@model IberaDelivery.Models.User
@{
    ViewBag.Title = "Reset Password";

}

<h2>Reset Password</h2>


<div>
    @using (Html.BeginForm("ResetPasswordEmail", "User"))
    {
        <div class="card container">
            <div style="color:red;">@Html.ValidationSummary()</div>
            <div class="row">
                <div class="col-lg-12">Enter the email of the account you want reset password</div>
            </div><br />
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Email)</div>
                <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
            </div><br />
            <input type="submit" value="Send Email" class="btn btn-primary" />
        </div>
    }

</div>