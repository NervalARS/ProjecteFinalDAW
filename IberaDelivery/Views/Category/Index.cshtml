@model IEnumerable<IberaDelivery.Models.Category>
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Categories";

}

<h2>Categories</h2>

<a asp-action="Create" class="btn btn-info">New Category</a>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>

            </th>
            <th>
                Edit 
            </th>
            <th>
                Delete
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="Index">
    <input type="text" class="form-control" name="Cadena">
    <input type="button" class="btn btn-info" value="Search"> @ViewBag.missatge
</form>
@if (@ViewBag.missatge != null)
{
    <a asp-action="Index">Treure filtre</a>
}
